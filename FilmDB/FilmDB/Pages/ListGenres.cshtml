@page
@model FilmDB.Pages.ListGenresModel

@{
    ViewData["Title"] = "ListGenres";
}

<h1>ListGenres</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Genre[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Genre) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GenreID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GenreID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GenreID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
